<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
<variable
    name="CommentItem"
    type="com.madhat.myzhihudaily.model.entity.CommentItem"></variable>
    </data>

    <LinearLayout
        app:setExpand ="@{CommentItem}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:loadUserImage="@{CommentItem.avater}"
                android:id="@+id/commnet_userimg"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@{CommentItem.author}"
                android:layout_toRightOf="@+id/commnet_userimg"
                android:layout_toLeftOf="@+id/praise_tv"
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="fff"/>
            <TextView
                android:drawablePadding="5dp"
                android:id="@+id/praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{CommentItem.likes}"
                android:drawableLeft="@drawable/comment_vote"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="55dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:lineSpacingExtra="3dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_content_tv"
                tools:text="呵呵呵"
                android:text="@{CommentItem.content}"
                />
            <TextView
                android:text="@{CommentItem.makeReply()}"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_reply_tv"
                android:visibility="@{CommentItem.reply_author==null?0x00000008:0x00000000}"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                tools:text="07-31 10:40"
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setCommentDate="@{CommentItem.time}"/>
            <TextView
                android:visibility="@{CommentItem.expand?0x00000000:0x00000008}"
                android:layout_alignParentRight="true"
                android:background="@android:color/darker_gray"
                android:text="展开"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:id="@+id/comment_expand"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
